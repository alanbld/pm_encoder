{
  "_comment": "pm_encoder Configuration v1.7.0 - Priority Groups Support",
  "ignore_patterns": [
    ".git",
    ".idea",
    ".vscode",
    "target",
    "build",
    "dist",
    ".venv",
    "__pycache__",
    "*.pyc",
    "*.log",
    "*.swp",
    "*.bak",
    "*.tmp",
    "node_modules",
    "recordings.db*",
    "compare_output",
    "htmlcov",
    ".coverage",
    "coverage.xml",
    "cobertura.xml",
    ".llm_archive"
  ],
  "include_patterns": [
    "*.rs",
    "*.toml",
    "*.md",
    "*.py",
    "*.sh",
    "*.json",
    "Dockerfile",
    "LICENSE"
  ],
  "lenses": {
    "architecture": {
      "description": "High-level code structure and configuration (optimized)",
      "_comment_groups": "v1.7.0: Priority Groups - higher priority files are ranked first in output",
      "groups": [
        {"name": "python_core", "pattern": "*.py", "priority": 100, "truncate_mode": "structure"},
        {"name": "rust_core", "pattern": "rust/src/**/*.rs", "priority": 100, "truncate_mode": "structure"},
        {"name": "rust_lib", "pattern": "**/*.rs", "priority": 95, "truncate_mode": "structure"},
        {"name": "cargo", "pattern": "Cargo.toml", "priority": 90},
        {"name": "config_toml", "pattern": "*.toml", "priority": 85},
        {"name": "config_json", "pattern": "*.json", "priority": 80},
        {"name": "makefile", "pattern": "Makefile", "priority": 75},
        {"name": "dockerfile", "pattern": "Dockerfile", "priority": 70},
        {"name": "readme", "pattern": "README.md", "priority": 65},
        {"name": "typescript", "pattern": "*.ts", "priority": 60},
        {"name": "javascript", "pattern": "*.js", "priority": 55}
      ],
      "fallback": {"priority": 50, "truncate_mode": "smart"},
      "include": [
        "*.py",
        "*.rs",
        "*.js",
        "*.ts",
        "*.json",
        "*.toml",
        "*.yaml",
        "*.yml",
        "Dockerfile",
        "Makefile",
        "README.md"
      ],
      "exclude": [
        "tests/**",
        "test/**",
        "docs/**",
        "htmlcov/**",
        "coverage.xml",
        ".coverage",
        "*.html",
        "*.css",
        "*.txt",
        "CONTEXT.txt",
        "test_vectors/**",
        "research/**",
        "LLM/**",
        ".llm_archive/**",
        "target/**",
        "examples/**",
        "scripts/**",
        "TUTORIAL.md",
        "TESTING.md",
        "PLUGIN_GUIDE.md",
        "QA_INFRASTRUCTURE.md",
        "SYSTEM_INSTRUCTIONS.md",
        "CONTRIBUTING.md",
        "RUST_ROADMAP.md",
        "CHANGELOG.md",
        ".github/**",
        ".claude/**"
      ],
      "truncate_mode": "structure",
      "truncate": 2000,
      "sort_by": "name",
      "sort_order": "asc"
    },
    "docs": {
      "description": "Documentation and guides for pm_encoder",
      "include": [
        "*.md",
        "CHANGELOG.md",
        "LICENSE",
        "examples/**"
      ],
      "exclude": [
        "LLM/**"
      ],
      "truncate_mode": "smart",
      "truncate": 500,
      "sort_by": "name",
      "sort_order": "asc"
    },
    "core": {
      "description": "Core implementation (pm_encoder.py only)",
      "include": [
        "pm_encoder.py"
      ],
      "exclude": [],
      "truncate_mode": "structure",
      "sort_by": "name"
    }
  }
}
